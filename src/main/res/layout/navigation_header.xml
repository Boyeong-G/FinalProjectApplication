<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="30dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:background="@drawable/naviheaderbackground">
    <TextView
        android:id="@+id/logout_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/gamtanrodeutantan"
        android:text="로그아웃 상태입니다." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/login_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/nobackgroundbutton"
            android:text="로그인"
            android:textColor="#5D5D5D"
            android:textSize="15dp"
            android:fontFamily="@font/gamtanrodeutantan"
            android:textAlignment="textEnd"/>
        <ImageButton
            android:id="@+id/login_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingEnd="20dp"
            android:background="@drawable/nobackgroundbutton"
            android:src="@drawable/login" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/login_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/gamtanrodeutantan"
        android:text="user@duksung.ac.kr" />
    <TextView
        android:id="@+id/login_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:fontFamily="@font/gamtanrodeutantan"
        android:textSize="13dp"
        android:textColor="#8C8C8C"
        android:text="환영합니다." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/logout_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/nobackgroundbutton"
            android:text="로그아웃"
            android:textColor="#5D5D5D"
            android:textSize="15dp"
            android:fontFamily="@font/gamtanrodeutantan"
            android:textAlignment="textEnd"/>
        <ImageButton
            android:id="@+id/logout_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:paddingEnd="20dp"
            android:background="@drawable/nobackgroundbutton"
            android:src="@drawable/logout" />
    </LinearLayout>
</LinearLayout>